.section
  .container
    .row
      .col-md-12.text-center
        - @shop_cart.items.each do |id, quantity| 
          %p
            ="Book id: #{id}"
            ="Quantity: #{quantity}"

.section
  .container
    .row
      .col-md-offset-3.col-md-6
        %form{ action: shop_cart_add_item_path , :method => "post" }
        = hidden_field_tag :authenticity_token, form_authenticity_token
        .form-group
          %fieldset
            %label{:for => "item[id]"} Item Id:
            %input{:type => "text", :name => "item[id]"}
            %label{:for => "item[quantity]"} Quantity:
            %input{:type => "text", :name => "item[quantity]", value: 1}
            %input{:type => "submit", :value => "Add", :class => "button"}

%form{ action: shop_cart_build_order_path , :method => "post" }
  %input{:type => "submit", :value => "Make order", :class => "button"}


