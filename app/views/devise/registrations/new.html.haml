.section
  .container
    .row
      .col-md-4.col-md-offset-4
        = bootstrap_form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f|
          = devise_error_messages!
          = f.email_field :email, placeholder: "your email", skip_label: true, autofocus: true
          = f.password_field :password, placeholder: "password", skip_label: true, autocomplete: "off"
          = f.password_field :password_confirmation, placeholder: "confirm password", skip_label: true, autocomplete: "off"
          = f.submit "Sign up", class: "btn btn-success btn-block"
        %br    
        Have an account?
        = link_to "Log in", new_session_path(resource_name)  